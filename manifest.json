{
	"manifest_version": 3,
	"name": "Better Youtube Sharing",
	"version": "1.0.0",
	"description": "Right click anywhere while playing a video to share without tracking nonsense.",
	"permissions": [
		"activeTab",
		"tabs",
		"contextMenus",
		"scripting",
		"clipboardWrite"
	],
	"icons": {
		"16": "icon.svg"
	},
	"content_scripts": [
		{
			"matches": [
				"https://youtube.com/*"
			],
			"js": [
				"index.js"
			]
		}
	],
	"background": {
		"scripts": [
			"background.js"
		]
	}
}